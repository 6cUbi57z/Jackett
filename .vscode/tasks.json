{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "yamllint",
      "type": "shell",
      "command": "yamllint",
      "args": [
        "-s",
        "-c",
        "${workspaceFolder}/yamllint.yml",
        "${workspaceFolder}/src/Jackett.Common/Definitions/"
      ],
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Jackett.Server/Jackett.Server.csproj"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src",
        "--project",
        "${workspaceFolder}/src/Jackett.Server/Jackett.Server.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
